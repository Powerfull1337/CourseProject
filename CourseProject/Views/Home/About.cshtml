@model CourseProject.Models.ViewModel.AddQuestionViewModel
@{
    ViewData["Title"] = "Про нас";
}
<!-- Page Content -->
<div id="page-content-wrapper">
	<div class="all-page-bar">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12">
					<div class="title title-1 text-center">
						<div class="much">
							<img src="~/uploads/mustache.png" alt="" />
						</div>

						<div class="title--heading">
							<h1>@Localizer["Про нас"]</h1>
						</div>
						<div class="clearfix"></div>

						<ol class="breadcrumb">
							<li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Головна"]</a></li>
							<li class="active"></li>
						</ol>
					</div>
					<!-- .title end -->
				</div>
			</div>
		</div>
	</div><!-- end all-page-bar -->

	<div class="section wb">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-md-6 text-left">
					<div class="message-box">
						<h4>@Localizer["Про нас"]</h4>
						@* <h2>Welcome to SMBarber</h2> *@
						<p class="lead">@Localizer["Ласкаво просимо до нашого барбершопу! Наш барбершоп - це місце, де історія зустрічається з сучасністю, де класика поєднується з інноваціями."]</p>

						<p>@Localizer["Відкритий у 2005 році, наш барбершоп став результатом глибокої страсті до традиційного чоловічого стрижка та бажання подарувати нашим клієнтам найкращий досвід. З перших днів нашої діяльності ми віддавали перевагу високій якості послуг та відмінному обслуговуванню."]</p>
						<p>@Localizer["З роками ми розвивалися та вдосконалювалися, завжди долаючи виклики, які ставали на нашому шляху. Наші барбери завжди були на передових рубежах моди та технології стрижки, завдяки чому ми завоювали велику кількість вдячних клієнтів і найвищі нагороди у галузі."]</p>
						<p>@Localizer["Ми пишаємося тим, що створили не просто місце для стрижки, але і спільноту чоловіків, які дбають про свій зовнішній вигляд та відчуття стилю. Ми завжди відкриті для нових знайомств та обміну досвідом. Завітайте до нас, і ви обов'язково знайдете друзів, які розділяють вашу любов до гарної зачіски та чоловічого стилю."]</p>
						<p>@Localizer["Ми завжди готові прийняти вас в нашому барбершопі. Запишіться на стрижку, приходьте, і ми з радістю допоможемо вам виглядати і відчувати себе найкраще. Будь-які запитання або побажання? Не соромтесь зв'язатися з нами за телефоном або електронною поштою - ми завжди на зв'язку."]</p>
						

						
					</div><!-- end messagebox -->
				</div><!-- end col -->
				<div class="col-md-6 text-center">
					<div class="right-box">
						<img class="img-fluid" src="~/uploads/about-img.jpg" alt="" />
					</div>
				</div><!-- end col -->
			</div><!-- end row -->

			<hr class="hr1">

			<div class="row">
				<div class="col-md-12">
					<div class="about-tab">
						<ul class="nav nav-pills nav-justified" id="myTab" role="tablist">
							<li class="nav-item"><a class="nav-link active" href="#tab_a" data-toggle="tab">@Localizer["Наша задача"]</a></li>
							<li class="nav-item"><a class="nav-link" href="#tab_b" data-toggle="tab">@Localizer["Чому ми?"]</a></li>
							<li class="nav-item"><a class="nav-link" href="#tab_c" data-toggle="tab">@Localizer["Про нас"]</a></li>
						</ul>
						<div class="tab-content">
							<div class="tab-pane fade show active" id="tab_a">
								<p>
									@Localizer["У нашому барбершопі ми прагнемо надати нашим клієнтам не лише стрижку і гоління, але й незабутній досвід, який запам'ятається надовго. Наша місія - відновити справжнє мистецтво чоловічого грумінгу і створити комфортну атмосферу, де кожен чоловік може відчути себе особливим.Ми віримо, що догляд за власною зовнішністю - це не просто ритуал, а спосіб виразити свою індивідуальність і самовираження. Тому ми працюємо, щоб кожен наш клієнт виглядав і почувався найкращим способом."]
								</p>
							</div>
							<div class="tab-pane fade" id="tab_b">
								<p>
									@Localizer["Наші досвідчені майстри володіють вищим рівнем майстерності і завжди готові відповісти на всі ваші побажання щодо зачіски, стрижки або гоління. Ми використовуємо найсучасніше обладнання та продукти для догляду за волоссям і волоссям обличчя, щоб забезпечити найкращі результати.Ми не просто стригаємо волосся - ми створюємо шедеври, які підкреслять ваш стиль і впевненість. Ми докладаємо всіх зусиль, щоб зробити кожен візит до нас особливим і незабутнім. Наша місія - зробити вас щасливими, впевненими в собі та завжди готовими до нових викликів."]
								</p>
								<ul>
									<li><i class="fa fa-circle-o" aria-hidden="true"></i>@Localizer["Стильний дизайн"]</li>
									<li><i class="fa fa-circle-o" aria-hidden="true"></i>@Localizer["Сучасний дизайн"]</li>
										<li><i class="fa fa-circle-o" aria-hidden="true"></i>@Localizer["Консультація у майстра"]</li>
										<li><i class="fa fa-circle-o" aria-hidden="true"></i>@Localizer["Вражаючий інтер'єр"]</li>
								</ul>
							</div>
							<div class="tab-pane fade" id="tab_c">
								<p>
									@Localizer["Наш барбершоп - це місце, де ми створюємо стиль та самовираз кожного клієнта. Ми віримо, що кожна зачіска може бути творчим шедевром, а кожен клієнт - унікальною історією. Наша команда пристрасних фахівців присвячена не просто роботі, а мистецтву, і завжди тут, щоб допомогти вам виглядати найкращим.Ми розуміємо, що важливо не лише відмінно виглядати, але і почувати себе комфортно під час візиту до нашого закладу. Наша атмосфера сповнена тепла та доброзичливості, що допомагає нашим клієнтам розслабитися та розкрити свій справжній потенціал."]
								</p>
						</div><!-- tab content -->
					</div>
				</div><!-- end col -->
			</div><!-- end row -->
			<hr class="hr1">
		</div><!-- end container -->
	</div><!-- end section -->
		<!-- Center the Google Maps iframe -->
		

</div>

	<div class="row justify-content-center">
		<div class="col-md-6 text-center">
			<h1>@Localizer["Ми на карті"]</h1>
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2596.00353816941!2d26.957839376496256!3d49.40883877141196!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4732068f357093b7%3A0xc4c40e1a0d42c702!2z0KXQvNC10LvRjNC90LjRhtC60LjQuSDQndCw0YbQuNC-0L3QsNC70YzQvdGL0Lkg0KPQvdC40LLQtdGA0YHQuNGC0LXRgg!5e0!3m2!1sru!2sua!4v1701607229740!5m2!1sru!2sua" width="600" height="450" style="border:0; margin-top: 20px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div><!-- end col -->

		<div class="col-md-6 text-center" style="width: 100%; margin-top: 20px;">
			<h1>@Localizer["Звязатись з нами"]</h1>
			<div class="contact_form mr-5 mb-4">

				<div id="message"></div>
				<form method="post" action="/Home/About" name="contactform">
					<fieldset class="row row-fluid">
						<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
							<input type="text" class="form-control" placeholder="@Localizer["Ім'я"]" asp-for="Name">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
							<input type="email" class="form-control" placeholder="Email" asp-for="Email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
							<input type="text" class="form-control" placeholder=@Localizer["Телефон"] asp-for="Phone">
							<span asp-validation-for="Phone" class="text-danger"></span>
						</div>
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-3">
							<textarea class="form-control" rows="6" placeholder=@Localizer["Дайте нам більше деталей"] asp-for="Description"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>
						<div class="form-btn text-center offset-lg-8">
							<button type="submit" class="btn btn-light btn-radius btn-brd grd1 btn-block subt">@Localizer["Відправити"]</button>
						</div>
					</fieldset>
				</form>
			</div>
		</div><!-- end col -->
	</div><!-- end row -->


<script>
	(function ($) {
		"use strict";
		$("#menu-toggle").click(function (e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
		});
		smoothScroll.init({
			selector: '[data-scroll]', // Selector for links (must be a class, ID, data attribute, or element tag)
			selectorHeader: null, // Selector for fixed headers (must be a valid CSS selector) [optional]
			speed: 500, // Integer. How fast to complete the scroll in milliseconds
			easing: 'easeInOutCubic', // Easing pattern to use
			offset: 0, // Integer. How far to offset the scrolling anchor location in pixels
			callback: function (anchor, toggle) { } // Function to run after scrolling
		});
	})(jQuery);
</script>