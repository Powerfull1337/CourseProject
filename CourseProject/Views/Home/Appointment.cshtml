@model CourseProject.Models.AddAppointmentViewModel
@{
}
<div id="page-content-wrapper">
	<div class="all-page-bar">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12">
					<div class="title title-1 text-center">
						<div class="much">
							<img src="uploads/mustache.png" alt="" />
						</div>

						<div class="title--heading">
							<h1>Appointment</h1>
						</div>
						<div class="clearfix"></div>

						<ol class="breadcrumb">
							<li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Головна</a></li>
							<li class="active">Appointment</li>
						</ol>
					</div>
					<!-- .title end -->
				</div>
			</div>
		</div>
	</div><!-- end all-page-bar -->

	<div id="appointment" class="section wb">
		<div class="container">
			<div class="section-title row text-center">
				<div class="col-md-8 offset-md-2">
					<small>LET'S MAKE AN APPOINTMENT FOR YOUR LIFE</small>
					<h3>Book now</h3>
				</div>
			</div><!-- end title -->

			<div class="row">
				<div class="col-lg-12">
					<div class="contact_form">
						<div id="message"></div>
						<form method="post" action="Add" name="contactform">
							<fieldset class="row row-fluid">
								<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
									<input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
								</div>
								<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
									<input type="text"  class="form-control" placeholder="Last Name" asp-for="LastName">
								</div>
								<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
									<input type="email" class="form-control" placeholder="Your Email" asp-for="Email">
								</div>
								<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
									<input type="text" class="form-control" placeholder="Your Phone" asp-for="Phone">
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">					
									<input type="date" id="basic" class="form-control" placeholder="Select Date" asp-for="DateOfBook">
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
									<textarea class="form-control"  rows="6" placeholder="Give us more details.."asp-for="Description"></textarea>
								</div>
								<div class="form-btn text-center">
									<button type="submit" class="btn btn-light btn-radius btn-brd grd1 btn-block subt">Get Appointment</button>
								</div>
							</fieldset>
						</form>
					</div>
				</div><!-- end col -->
			</div><!-- end row -->
		</div><!-- end container -->
	</div><!-- end section -->
</div>
<script>
	flatpickr("#basic", {
		dateFormat: "d-m-Y",
		enableTime: false,
	});
</script>


