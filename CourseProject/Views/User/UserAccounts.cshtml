@model List<CourseProject.Models.Domain.Appointement>
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
    string userName = User.Identity.Name;
}



<h1>Ваші замовлення</h1>
<h1>@userName</h1>

<div class="container">
@*   <div class="pb-3">  *@
        <table class="table">
            <thead>
                <tr>
                    <th> Id</th>
                    <th> Ім'я</th>
                    <th> Email</th>
                    <th> Телефон</th>
                    <th> Час замовлення</th>
                    <th> Дата замовлення</th>
                    <th> Опис</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Id</td>
                        <td>@appointment.FirstName</td>
                        <td>@appointment.Email</td>
                        <td>@appointment.Phone</td>
                        <td>@appointment.TimeOfBook.ToString("HH:mm:ss")</td>
                        <td>@appointment.DateOfBook.ToString("dd-MM-yyyy")</td>
                        <td>@appointment.Description</td>             
                    </tr>
                }
            </tbody>
        </table>
      @* </div>  *@
</div> 
<style>
    h1 {
        margin-top: 30px;
    }

    .container {
        padding-left: 5px; /* Adjust the left padding as needed */
        padding-right: 5px; /* Adjust the right padding as needed */
    }

    table {
        width: 900px;
        font-family: sans-serif;
        font-weight: 100;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px #0000001a;

    }
    th,
    td{
        background-color: #ffffff33;
        padding: 15px;
    /*     color: #fff; */
    }
    thead th{
        background-color: #55608f;
    }
    tbody tr:hover{
        background-color: #ffffff4d
    }
    tbody td{
        position: relative;
    }
    tbody td:hover:before {
        content: "";
        position: absolute;
        background-color: #ffffff33;
        left: 0;
        right: 0;
        top: -9999px;
        bottom: -9999px;
        z-index: -1;
    }
     
</style>
