@model List<CourseProject.Models.Domain.Appointement>
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";

}
<div class="user-content">
    <h1>Ваші замовлення</h1>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th> Ім'я</th>
                    <th> Email</th>
                    <th> Телефон</th>
                    <th> Послуга</th>
                    <th> Ціна</th>
                    <th> Час </th>
                    <th> Дата </th>
                    <th> Опис</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.FirstName</td>
                        <td>@appointment.Email</td>
                        <td>@appointment.Phone</td>
                        <td>@appointment.ServiceName</td>
                        <td>@appointment.Price</td>
                        <td>@appointment.TimeOfBook.ToString("HH:mm:ss")</td>
                        <td>@appointment.DateOfBook.ToString("dd-MM-yyyy")</td>
                        <td>@appointment.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}
<style>
 table {
        width: 900px;
        font-family: sans-serif;
        font-weight: 100;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px #0000001a;
    }

    th, td {
        background-color: #ffffff33;
        padding: 15px;
    }

    thead th {
        background-color: #55608f;
    }

    tbody tr:hover {
        background-color: #ffffff4d;
    }

    tbody td {
        position: relative;
    }

        tbody td:hover:before {
            content: "";
            position: absolute;
            background-color: #ffffff33;
            left: 0;
            right: 0;
            top: -9999px;
            bottom: -9999px;
            z-index: -1;
        }
</style>